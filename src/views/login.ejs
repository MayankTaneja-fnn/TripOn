
<center>
    <div class="signup-container">
        <form class="signup-form" action="/" method="post">
            <h1 class="signup-heading">Log In</h1>
            <div class="input-container">
                <label for="email" class="signup-label">Email</label>
                <input type="email" id="email" name="email" class="signup-input" required>
            </div>
            <div class="input-container">
                <label for="password" class="signup-label">Password</label>
                <input type="password" id="password" name="password" class="signup-input" required>
            </div>
            <button type="submit" class="signup-button">Log In</button>
            <p class="signup-p">Not have an account? <a href="/signUp " class="signup-a">Sign Up</a></p>
        </form>
    </center>
    </div>
